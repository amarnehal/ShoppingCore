@model ShoppingCore.Model.ProductType

@{
    ViewData["Title"] = "New";
}
<section class="pt-4 mt-4">
    <div class="container">
        <div class="row mt-3 pt-3">
            <h2 class="text-primary">Create a ProductType</h2>
            <hr />
        </div>
        <form method="post">
            <div class="mt-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <button class="btn btn-primary" type="submit" style="width:150px">Submit</button>
            <a asp-controller="ProductType" asp-action="Index" class="btn btn-secondary">Back To List</a>
        </form>
    </div>
    </section>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
