@model ShoppingCore.Model.ShoppingCart

    <section class="details_wrapper">
        <form method="post">
            <input hidden asp-for="ProductId" />
            <div class="card container mt-4 pt-4">
                <div class="card-header bg-dark text-light ml-0 row ">
                    <div class="col-lg-12 col-md-8 col-sm-4">
                        <p class="text-light-100">Continue Shopping</p>
                    </div>
                    <div class="col-12 col-md-6 col-sm-4 text-end pt-2">
                        <span class="badge bg-info pt-2" style="height:30px;">Brand - @Model.Product.Category.Name</span>
                        @*<span class="badge bg-warning pt-2" style="height:30px;">Category</span>*@
                    </div>
                </div>

                <div class="card-body row container">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="row pl-2">
                                    <h5 class="text-danger pb-3 mb-2 order-sm-0">Product Type:@Model.Product.ProductType.Name</h5>
                                </div>
                                <div class="row text-center pl-2 mb-2 order-sm-1">
                                    <div class="p-1 col-lg-4 col-md-6 col-sm-12 bg-light border-bottom">
                                        <div>Product:@Model.Product.Name</div>
                                    </div>
                                </div>
                                <div class="row text-center pl-2 mb-2 order-sm-4" style="color:maroon; font-weight:bold">
                                    <div class="p-1 col-lg-4 col-sm-6 bg-light">
                                        <div>Price:@Model.Product.Price</div>
                                    </div>
                                </div>
                                <div class="row pl-2 order-sm-5">
                                    <p class="text-secondary">@Model.Product.Description</p>
                                </div>
                                <div class="row pl-2 order-sm-last">
                                    <div class="col-lg-4 col-sm-6 col-md-4 text-primary"><h3>Count</h3></div>
                                    <div class="col-lg-8 col-sm-6 col-md-8"><input min="1" asp-for="Count" class="form-control" /></div>
                                    <span asp-validation-for="@Model.Count" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-lg-3 offset-lg-1 text-center order-sm-3">
                                <img src="@Model.Product.ImageUrl" width="100%" class="rounded img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a class="btn btn-success form-control " asp-controller="Home" asp-action="Index" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 pb-1">
                            <button type="submit" value="Add to Cart" class="btn btn-dark form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>