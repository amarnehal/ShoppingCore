@model IEnumerable<ShoppingCore.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<section id="home" class="home pt-3 overflow-hidden">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
               <div class="home-banner home-banner-1">
                   <div class="home-banner-text">
                       <h1 class="text-light">Deals</h1>
                       <h2 class="text-light">50% discount Available</h2>
                   </div>
                   <button class="btn btn-outline-danger text-light">Products</button>
               </div>
            </div>
            <div class="carousel-item">
                <div class="home-banner home-banner-2">
                    <div class="home home-banner-text">
                    </div>
                </div>
            </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
        </div>
</section>

<section class="home-Wrapper mt-4">
    <div class="container-fluid">
        <div class="row pb-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="clo-12 p-2 mt-3" style="border: 1px solid #91b8c4;border-radius:5px;">
                        <div class="card text-md-start text-center">
                            <img src="@product.ImageUrl " class="card-img-top rounded img-fluid" />
                            <div class="card-body">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark text-center">@product.Name</p>
                                    <p class="card-text text-dark"><b>@product.Description</b></p>
                                </div>
                                <div class="pl-1">
                                    <p>Price:<b>$@product.Price.ToString("0.00")</b></p>
                                </div>
                            </div>
                            <div>
                                <a asp-controller="Home" asp-action="Details" asp-route-productid="@product.Id" class="btn btn-dark form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    </section>

