@using Microsoft.AspNetCore.Http
@using ShoppingCore.Utilities 
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingCore</title>
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" href="~/css/Responsive.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body data-bs-spy="scroll" data-bs-target=".navbar">
    <section id="header" class="header_wrapper pb-3">
        <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm bg-white fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img id="logo" src="~/Images/logo/shop.png" alt="logo" class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#About">About</a>
                        </li>

                        @if (User.IsInRole(SD.Role_Admin))
                        {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            ContentManagemnt
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-area="Admin">Product</a>
                            <a class="dropdown-item" asp-controller="ProductType" asp-action="Index" asp-area="Admin">ProductType</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                        </div>
                    </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                Cart
                                @await Component.InvokeAsync("ShoppingCart")
                            </a>

                        </li>
                    </ul>
                    <partial name="_LogInPartial" />
                </div>
            </div>
        </nav>
    </section>
        <div>
            <main role="main" class="pt-4">
                @RenderBody()
            </main>
        </div>
        <footer>
            <div class="p-3 copyright bg-dark">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-12 col-lg-6 p-1 p-lg-3 text-center text-lg-start">
                            <p class="my-0">Copyright &copy; 2022 <a href="">E-Shop</a>&nbsp; All rights are reserved</p>
                        </div>
                        <div class="col-12 col-lg-6 p-1 p-lg-3 text-center text-lg-end">
                            <p>Designed By <a href="#" target="_blank"></a>Amarveer</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <!-- JavaScript Bundle with Popper -->
        <script src="~/js/main.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
